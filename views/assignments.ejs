<%- include('partials/header'); -%>

<div class="container h-100 p-5">
    <%- include('partials/error'); -%>
    <a href="/" class="btn btn-dark"><i class="fas fa-hand-point-left"></i></a>
    <div class="text-center pb-4">
        <h1 class="d-inline">Assignments</h1>
        <a href="/assignments/new" class="btn btn-dark mb-3 ms-2">Create <i class="fas fa-plus-circle"></i></a>
    </div>
    <div class="row d-flex justify-content-center">
        <% var i = 0; %>
        <% assignments.forEach(function(assignment){ i++ %>
            <div class="col-md-10 col-lg-8 mb-5">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                      <h6>Assignment#<%= i %></h6>
                      <span class="push-left"><%= assignment.created.toUTCString() %></span>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><a class="text-dark" href="/assignments/<%= assignment.id %>"><%= assignment.title %></a></h5>
                      <p class="card-text"><%= assignment.description %></p>
                      <a href="/assignments/<%= assignment.id %>" class="btn btn-dark">Show <i class="fas fa-chevron-circle-right"></i></a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer'); -%>